<Window x:Class="WpfProjetoBd.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro" Height="500" Width="800" Icon="/Assets/Gatoflix-logo.png">

    <Window.Resources>
        <!-- Estilo para os botões -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#e50914"/>
            <Setter Property="Foreground" Value="#FFF"/>
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5" />
        </Style>

        <!-- Estilo para as TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5" />
        </Style>


        <!-- Estilo para as PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid Background="#141414">
        
        <StackPanel Orientation="Vertical" Background="#221F1F" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/Assets/gatoflix-nome.png" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Margin="10"/>
            
            <TextBlock FontSize="24" FontWeight="Bold" Foreground="#FFF" HorizontalAlignment="Center" Text="Criar Conta"/>
            
            <!-- Nome -->
            <TextBlock FontSize="14" Foreground="#FFF" Margin="25 0 25 0">Nome</TextBlock>
            <TextBox x:Name="txtNome"  Background="#141414" Foreground="#FFF"/>

            <!-- Email -->
            <TextBlock FontSize="14" Foreground="#FFF" Margin="25 0 25 0">Email</TextBlock>
            <TextBox x:Name="txtEmail" Background="#141414" Foreground="#FFF"/>

            <!-- Senha -->
            <TextBlock FontSize="14" Foreground="#FFF" Margin="25 0 25 0">Senha</TextBlock>
            <PasswordBox x:Name="txtSenha" Background="#141414" Foreground="#FFF"/>

            <!-- Confirmar Senha -->
            <TextBlock FontSize="14" Foreground="#FFF" Margin="25 0 25 0">Confirmar Senha</TextBlock>
            <PasswordBox x:Name="txtConfirmarSenha" Background="#141414" Foreground="#FFF"/>

            <!-- Botões -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 15 0 0">
                <Button FontWeight="Bold"  Margin="5"
                            Click="BtnRegistrar_Click">Registrar</Button>

                <StackPanel Orientation="Horizontal" Margin="5 0 0 25" >
                    <TextBlock Foreground="#FFF">Já tem uma conta?</TextBlock>
                    <Button FontWeight="Bold" Click="BtnVoltar_Click" Width="75" Background="#221f1f" Padding="0" Margin="0">Fazer login</Button>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
