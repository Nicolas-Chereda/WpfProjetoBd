<UserControl x:Class="WpfProjetoBd.View.UserControls.CardFilme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfProjetoBd.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid MouseEnter="Grid_MouseEnter" MouseLeftButtonUp="Card_MouseClick">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Border x:Name="BordaHover"
                Grid.Row="0"
                MouseEnter="BordaHover_MouseEnter"
                MouseLeave="BordaHover_MouseLeave"
        >
            <Image Source="{Binding Capa}" HorizontalAlignment="Stretch" Stretch="UniformToFill" Height="100" Grid.Row="0"/>
        </Border>

        <TextBlock Text="{Binding Titulo}"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource Texto}"
                   Padding="4"
                   Grid.Row="1"
                   />
    </Grid>
</UserControl>
