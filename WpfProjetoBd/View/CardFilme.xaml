<UserControl x:Class="WpfProjetoBd.CardFilme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfProjetoBd"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>


        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Grid.Column="1" x:Name="scroll"   >
            <ItemsControl ItemsSource="{Binding Trailers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5, 0, 0, 5" MouseEnter="Trailer_MouseEnter">
                            <Border BorderThickness="2"
                            CornerRadius="6"
                            BorderBrush="Transparent"
                            x:Name="BordaFilme">
                                <Image Source="{Binding Capa}"  
                                Width="200" Height="100"
                                Stretch="UniformToFill"/>
                            </Border>
                            <TextBlock Text="{Binding Titulo}" 
                               TextAlignment="Center"
                               FontSize="14"
                               Foreground="{StaticResource Texto}"
                               Margin="0"/>
                        </StackPanel>

                        <DataTemplate.Triggers>
                            <Trigger Property="UIElement.IsMouseOver" Value="True">
                                <Setter TargetName="BordaFilme" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="BordaFilme" Property="BorderThickness" Value="3"/>
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Botões laterais -->
        <Button Content="◀" Width="25" Height="100"
        VerticalAlignment="Top"
        Click="Voltar_Click"
        Background="{StaticResource SecundariaEscura}"
        BorderThickness="0"
        Foreground="{StaticResource Texto}"
        Grid.Column="0"    />

        <Button Content="▶" Width="25" Height="100"
        VerticalAlignment="Top"
        Click="Avancar_Click"
        Background="{StaticResource SecundariaEscura}"
        BorderThickness="0"
        Foreground="{StaticResource Texto}"
        Grid.Column="2"/>

    </Grid>
</UserControl>
