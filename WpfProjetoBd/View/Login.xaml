<Window x:Class="WpfProjetoBd.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" Icon="/Assets/Gatoflix-logo.png">

    <Window.Resources>
        <!-- Estilo para os botões -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#e50914"/>
            <Setter Property="Foreground" Value="#FFF"/>
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5" />
        </Style>

        <!-- Estilo para as TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5" />
        </Style>


        <!-- Estilo para as PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid Background="#141414">
        <Border Padding="10 30" BorderThickness="0" Background="#221f1f" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Background="#221f1f" VerticalAlignment="Center" 
                        Width="300" HorizontalAlignment="Center"
            >
                <Image Source="/Assets/Gatoflix.png" Width="150" />

                <TextBlock FontWeight="Bold" FontSize="14" Foreground="#FFF" Margin="25 5 0 0">Email</TextBlock>
                <TextBox x:Name="txtEmail"  Background="#141414" Foreground="#FFF" />

                <TextBlock FontWeight="Bold" FontSize="14" Foreground="#FFF" Margin="25 0 0 0">Senha</TextBlock>
                <PasswordBox x:Name="txtSenha" />

                
                <Button FontWeight="Bold"
                        Click="BtnLogin_Click">Entrar</Button>

                <StackPanel Orientation="Horizontal" Margin="25 5 0 25">
                    <TextBlock Foreground="#FFF">Não tem uma conta?</TextBlock>
                    <Button FontWeight="Bold" Click="BtnCriarConta_Click" Width="75" Background="#221f1f" Padding="0" Margin="0">Criar Conta</Button>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Window>
