<Application x:Class="WpfProjetoBd.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfProjetoBd"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <!-- 🎨 Cores base -->
        <Color x:Key="CorPrincipal">#e50914</Color>
        <Color x:Key="CorSecundaria">#221F1F</Color>
        <Color x:Key="CorSecundariaEscura">#141414</Color>

        <!-- 🖌️ Brushes (pincéis) -->
        <SolidColorBrush x:Key="Principal" Color="{StaticResource CorPrincipal}" />
        <SolidColorBrush x:Key="Secundaria" Color="{StaticResource CorSecundaria}" />
        <SolidColorBrush x:Key="Texto" Color="White" />
        <SolidColorBrush x:Key="SecundariaEscura" Color="{StaticResource CorSecundariaEscura}"/>
    </Application.Resources>
</Application>
